<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSignup"
    tools:context="com.example.shakil.findblooddonor.EditProfile">

    <TextView
        android:id="@+id/txt_editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="42dp"
        android:text="Edi Profile"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_bloodgrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_edit_contact"
        android:layout_below="@+id/editText_edit_contact"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/ic_action_blood"
        android:text="Blood Group"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_editProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_edit_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="contact no"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/spinner_edit_blood_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_edit_save"
        android:layout_alignTop="@+id/txt_bloodgrp"
        android:layout_toEndOf="@+id/btn_edit_back"
        android:autofillHints="blood group" />

    <Button
        android:id="@+id/btn_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/txt_editProfile"
        android:text="Save" />

    <Button
        android:id="@+id/btn_edit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_edit_save"
        android:layout_alignBottom="@+id/btn_edit_save"
        android:layout_toStartOf="@+id/btn_edit_save"
        android:text="Back" />

    <Button
        android:id="@+id/btn_edit_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_edit_back"
        android:layout_alignBottom="@+id/btn_edit_back"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/btn_edit_back"
        android:text="Log Out" />

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_edit_logout"
        android:layout_alignEnd="@+id/btn_edit_logout"
        android:layout_marginBottom="16dp"
        android:text="Delete Account" />


</RelativeLayout>
